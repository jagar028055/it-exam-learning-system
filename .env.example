# IT試験学習システム - 環境変数テンプレート

# Flask設定
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=5001

# データベース設定
DATABASE_PATH=./data/database.db

# ログ設定
LOG_LEVEL=INFO

# セッション設定
SESSION_FILE_DIR=./flask_session

# セキュリティ設定
CSRF_ENABLED=true

# 本番環境専用 (development環境では不要)
# DATABASE_URL=sqlite:///opt/render/project/src/data/database.db
# PYTHONPATH=/opt/render/project/src